<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===== ШАПКА: информация о возврате ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Накладная"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата ТТН"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата приёмки"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvAcceptanceDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ожидает подтверждения"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контрагент"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvContractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== СПИСОК ТОВАРОВ ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="180dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintBottom_toTopOf="@id/cardSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== ИТОГИ (фиксированный низ) ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Итоги"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Позиции -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginEnd="6dp"
                    android:background="#F57C00">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Позиции"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvTotalItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Всего -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginEnd="6dp"
                    android:background="#1976D2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Всего"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvTotalQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 шт."
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Брак -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#2E7D32">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Брак"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvTotalDefect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 шт."
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подтвердить возврат"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== FAB: Добавить товар ===== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@id/cardSummary"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
