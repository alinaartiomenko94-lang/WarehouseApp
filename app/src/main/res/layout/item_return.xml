<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReturn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- ===== Заголовок: №ТТН + Дата ТТН ===== -->
        <TextView
            android:id="@+id/tvTitleTtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="№ 12345678 от 12.04.2024"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivMenu"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Меню (три точки) -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="menu"
            android:src="@android:drawable/ic_menu_more"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ===== Контрагент ===== -->
        <TextView
            android:id="@+id/tvCounterparty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ООО «Игрушкин»"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleTtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- ===== Плашки: Тип документа + Статус ===== -->
        <LinearLayout
            android:id="@+id/rowChips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:baselineAligned="false"
            app:layout_constraintTop_toBottomOf="@id/tvCounterparty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Тип документа -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF2CC"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/tvDocType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="Возвратная накладная"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#7A4B00"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Статус -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#DFF5E4">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="Создан"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#156A2F"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ===== Строка действий (в одну линию): Показать детали | Просмотр списка ===== -->
        <LinearLayout
            android:id="@+id/rowActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowChips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Показать детали -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleDetails"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Показать детали"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="textEnd"
                app:iconPadding="6dp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Просмотр списка -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewList"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Просмотр списка"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="textEnd"
                app:iconPadding="6dp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button"/>
        </LinearLayout>

        <!-- ===== Раскрываемый блок деталей (по умолчанию скрыт) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detailsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F0F7FF"
            app:strokeColor="#D6E9FF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/rowActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общее количество:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B3A66"/>

                    <TextView
                        android:id="@+id/tvTotalQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="124 шт."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B3A66"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="#D6E9FF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Кол-во брака:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#8A1F1F"/>

                    <TextView
                        android:id="@+id/tvDefectQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 шт."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#8A1F1F"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Дата приёмки ===== -->
        <TextView
            android:id="@+id/tvAcceptanceDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Дата приёмки: 11.04.2024"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/detailsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
